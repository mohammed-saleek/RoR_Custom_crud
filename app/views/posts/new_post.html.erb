<!DOCTYPE html>
<html>
<head>
	<title>Upload Post</title>
</head>
<body>
	<center><h4>Upload Your Post</h4>
		<%= form_for :post, url:create_post_path, method: :post do |f| %>
		<p>
			<%= f.label :title %>
			<%= f.text_field :title %>
		</p>
		<p>
			<%= f.label :description%>
			<%= f.text_area :description %>
		</p>
		<p>
			<%= f.submit "Register"%>
		</p>
		<br>
		<% end %>
		<%= link_to 'Back', posts_path %>
	</center>
</body>
</html>